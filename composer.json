{
    "name": "forlaravel/lux",
    "description": "Laravel Lux is a set of laravel blade components based on shadcn/ui",
    "license": "MIT",
    "authors": [
        {
            "name": "ForLaravel",
            "email": "lennard@forlaravel.dev",
            "homepage": "http://forlaravel.dev"
        }
    ],
    "homepage": "https://github.com/forlaravel/lux",
    "keywords": ["lux", "laravel", "livewire", "blade", "components", "ui", "shadcn", "forlaravel"],
    "require": {
        "illuminate/contracts": "^9.0||^10.0||^11.0||^12.0",
        "gehrisandro/tailwind-merge-php": "^1.1",
        "livewire/blaze": "^1.0.0-beta.1"
    },
    "autoload": {
        "psr-4": {
            "Lux\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lux\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "pestphp/pest": "^2.0|^3.0",
        "pestphp/pest-plugin-laravel": "^2.0|^3.0"
    },
    "scripts": {
        "test": "pest"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Lux\\LuxServiceProvider"
            ],
            "aliases": {
                "Lux": "Lux\\Lux"
            }
        }
    }
}
